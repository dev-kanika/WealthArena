# WealthArena Backend Environment Configuration Template
# IMPORTANT: Copy this file to .env and fill in actual values
# This file should NEVER contain real credentials

# Azure SQL Database Configuration (Phase 1 credentials)
DB_HOST=sql-wealtharena-dev.database.windows.net
DB_NAME=wealtharena_db
DB_USER=wealtharena_admin
DB_PASSWORD=WealthArena2024!@#$%
DB_PORT=1433
DB_ENCRYPT=true

# Azure Storage (optional for Phase 1)
AZURE_STORAGE_ACCOUNT=stwealtharenadev
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string

# Azure Cosmos DB (optional - backend doesn't use this yet)
