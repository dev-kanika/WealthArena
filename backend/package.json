    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^12.0.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.0",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
