# WealthArena RL Service Environment Configuration Template
# IMPORTANT: Copy this file to .env and fill in actual values
# This file should NEVER contain real credentials

# Database Configuration
DB_TYPE=sqlserver
DB_HOST=sql-wealtharena-dev.database.windows.net
DB_NAME=wealtharena_db
DB_USER=wealtharena_admin
DB_PASSWORD=your-database-password-here
DB_PORT=1433
DB_ENCRYPT=true

# SQL Server Specific (if using SQL Server)
SQL_DRIVER=ODBC Driver 18 for SQL Server

# PostgreSQL Specific (if using PostgreSQL)
# DB_PORT=5432

# Model Configuration
MODEL_MODE=production
MODEL_PATH=/app/models/latest
MODEL_STORAGE_URI=your-model-storage-uri-here

# Azure Storage (optional, for model storage)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string-here

# Google Cloud Storage (optional, for model storage)
GCS_BUCKET=wealtharena-models
GCS_MODEL_PREFIX=latest/

# Server Configuration
PORT=5002
HOST=0.0.0.0
NODE_ENV=production

# Logging
LOG_LEVEL=INFO
